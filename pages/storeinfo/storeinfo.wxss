/* pages/storeinfo/storeinfo.wxss */
.container{
    padding:0 50rpx;
}
.avatar{
    padding: 120rpx 0;
}
.avatar image{
    width: 190rpx;
    height: 190rpx;
    border-radius:50%;
}
.storeName{
    margin-bottom: 30rpx;
}
.storeDesc label,
.storeName label{
    font-size: 38rpx;
}
.storeName input,
.storeDesc textarea{
     border:1px solid #ccc;
    border-radius: 8rpx;
    font-size: 34rpx;
    color: #a3a3a3;
}
.storeName input{
   
    margin-top: 10rpx;
    height: 88rpx;
    line-height: 88rpx;
    
    padding-left: 10rpx;
}
.storeDesc{
    margin-bottom: 100rpx;
}
.storeDesc textarea{
    margin-top: 10rpx;
    border: 1px solid #ccc;
    border-radius: 8rpx;
    width: 100%;
    height: 180rpx;
    padding-top: 10rpx;
    text-indent: 10rpx;
}
.save{
    color: #fff;
    font-size: 34rpx;
    background: #0b9fff;
}
